-#  This file is app/views/movies/show_with_same_director.html.haml
%h1 Similar Movies for #{@origin_movie.title}

%table#movies
  %thead
    %tr
      %th Title
      %th Rating
      %th Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to "Back to #{@origin_movie.title} page", movie_path(@origin_movie)
